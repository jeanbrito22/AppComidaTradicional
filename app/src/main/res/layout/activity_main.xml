<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/NomePais"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/nomePais"
        android:textSize="@dimen/tamanhoTexto"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />



    <ImageView
        android:id="@+id/imagemBandeira"
        android:layout_width="@dimen/larguraImg"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/descricaoBandeira"
        app:srcCompat="@drawable/bandeira" />


    <ImageView
        android:id="@+id/imagemComida"
        android:layout_width="@dimen/larguraImg"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/descricaoComida"
        app:srcCompat="@drawable/comida" />



    <TextView
        android:id="@+id/nomeComida"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/nomeComida"
        android:textSize="@dimen/tamanhoTexto"
        android:textStyle="bold" />


</LinearLayout>